# todu-fit Development Environment
# Copy to .env and customize

# =============================================================================
# Sync Server (shared by CLI and web)
# =============================================================================

SYNC_SERVER_PORT=8080
SYNC_SERVER_URL=ws://localhost:8080
SYNC_DATA_DIR=./data/dev/sync

# =============================================================================
# Web Server Configuration
# =============================================================================

# Hono server port
PORT=3000

# SQLite database (path relative to web/ directory)
DATABASE_PATH=../data/dev/todu-fit.sqlite

# =============================================================================
# Authentication
# =============================================================================

ADMIN_EMAIL=you@example.com
SESSION_SECRET=change-this-to-a-random-string
SESSION_MAX_AGE_DAYS=30

# =============================================================================
# Email / Magic Link
# =============================================================================

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM_NAME=todu-fit
SMTP_FROM_EMAIL=noreply@example.com
PUBLIC_URL=http://localhost:5173
SMTP_DEV_MODE=true
MAGIC_LINK_EXPIRY_MINUTES=15

# =============================================================================
# WebAuthn / Passkeys
# =============================================================================

RP_ID=localhost
RP_NAME=todu-fit

# =============================================================================
# Vite Client
# =============================================================================

VITE_SYNC_URL=ws://localhost:8080
