# todu-fit Test Environment
# Used by: make test-env (wiped before each test run)

TODU_ENV=test

# =============================================================================
# Sync Server
# =============================================================================

SYNC_SERVER_PORT=8080
SYNC_SERVER_URL=ws://localhost:8080
SYNC_DATA_DIR=./data/test/sync

# =============================================================================
# Web Server Configuration
# =============================================================================

PORT=3000

# Path relative to web/ directory
DATABASE_PATH=../data/test/todu-fit.sqlite

# =============================================================================
# Authentication
# =============================================================================

ADMIN_EMAIL=test@example.com
SESSION_SECRET=test-secret-do-not-use-in-production
SESSION_MAX_AGE_DAYS=30

# =============================================================================
# Email / Magic Link
# =============================================================================

PUBLIC_URL=http://localhost:5173
SMTP_DEV_MODE=true
MAGIC_LINK_EXPIRY_MINUTES=15

# =============================================================================
# WebAuthn / Passkeys
# =============================================================================

RP_ID=localhost
RP_NAME=todu-fit

# =============================================================================
# Vite Client
# =============================================================================

VITE_SYNC_URL=ws://localhost:8080
